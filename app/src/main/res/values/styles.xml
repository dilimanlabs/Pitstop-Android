<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/light_blue_500</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/light_blue_900</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/purple_A700</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->

        <item name="android:windowBackground">@color/white</item>

        <!-- Material Dialog -->
        <item name="md_positive_color">@color/light_blue_500</item>
        <item name="md_negative_color">@color/black_secondary_text</item>

        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="windowActionModeOverlay">true</item>
        <!--Action Mode styles -->
        <item name="actionModeStyle">@style/Custom.Widget.ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/Custom.Widget.ActionButton.CloseMode</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Custom.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
        <item name="contentInsetStart">@dimen/first_keyline</item>
    </style>

    <style name="Custom.Widget.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="Custom.Widget.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Custom.Widget.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
    </style>

    <style name="Custom.Widget.ActionButton.CloseMode" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/white</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation</item>
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <item name="windowActionModeOverlay">true</item>
        <!--Action Mode styles -->
        <item name="actionModeStyle">@style/Custom.Widget.ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/Custom.Widget.ActionButton.CloseMode</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle.Light</item>
    </style>

    <style name="DrawerArrowStyle.Light" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/black</item>
    </style>

    <style name="ListPrimaryTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListSecondaryTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
