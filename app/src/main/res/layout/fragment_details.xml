<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:res-auto="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:animateLayoutChanges="true"
              android:orientation="vertical">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabstrip"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_500"
        res-auto:pstsDividerColor="@color/transparent"
        res-auto:pstsDividerPadding="0dp"
        res-auto:pstsIndicatorColor="@color/purple_A700"
        res-auto:pstsIndicatorHeight="2dp"
        res-auto:pstsScrollOffset="60dp"
        res-auto:pstsShouldExpand="false"
        res-auto:pstsTabPaddingLeftRight="12dp"
        res-auto:pstsTextAllCaps="true"
        res-auto:pstsUnderlineColor="@color/transparent"
        res-auto:pstsUnderlineHeight="0dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"/>

</LinearLayout>