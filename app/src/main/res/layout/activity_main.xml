<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res-auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <LinearLayout
        android:id="@+id/content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            res-auto:contentInsetStart="@dimen/second_keyline"
            res-auto:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            res-auto:titleTextAppearance="@style/TextAppearance.AppCompat.Title"/>


        <FrameLayout
                android:id="@+id/fragment_frame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <!--
                    <com.pnikosis.materialishprogress.ProgressWheel
                            android:id="@+id/progress_wheel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            res-auto:matProg_barWidth="2dp"
                            res-auto:matProg_barColor="@color/light_blue_200"
                            res-auto:matProg_progressIndeterminate="true"/>
                    -->

        <!-- Inflate appropriate views here via Java code -->

    </LinearLayout>

    <!-- The navigation drawer -->
    <ScrollView
        android:id="@+id/drawer"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:layout_width="72dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.dilimanlabs.pitstop.ui.widgets.RadioButtonCenter
                    android:id="@+id/nav_account"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:background="@drawable/nav_bg"
                    android:button="@drawable/img_avatar"/>

                <com.dilimanlabs.pitstop.ui.widgets.RadioButtonCenter
                    android:id="@+id/nav_explore"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:background="@drawable/nav_bg"
                    android:button="@drawable/img_explore"/>

                <com.dilimanlabs.pitstop.ui.widgets.RadioButtonCenter
                    android:visibility="gone"
                    android:id="@+id/nav_social"
                    android:background="@drawable/nav_bg"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:button="@drawable/img_social"/>

                <View
                    android:layout_marginBottom="8dp"
                    android:background="@color/black_dividers"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <com.dilimanlabs.pitstop.ui.widgets.RadioButtonCenter
                    android:visibility="gone"
                    android:layout_gravity="bottom"
                    android:id="@+id/nav_settings"
                    android:background="@drawable/nav_bg"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:button="@drawable/img_settings"/>
            </RadioGroup>

        </LinearLayout>

    </ScrollView>

</android.support.v4.widget.DrawerLayout>